<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/drawerLayout"
tools:context=".UpdateProfileActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#087077"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myproftxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My Profile"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="40px"
            android:layout_marginBottom="20dp"
            android:background="@drawable/acimg"
            android:ems="10"
            android:hint="From"
            android:inputType="text"
            android:paddingStart="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="380dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6N"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NAME :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Nameittxtu"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/roundedittext"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9N"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NIC      :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Nicittxtu"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/roundedittext"
                android:ems="10"
                android:hint="Nic"
                android:inputType="number"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11N"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PHONE :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Phoneedittxtu"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/roundedittext"
                android:ems="10"
                android:hint="Phone"
                android:inputType="number"
                android:paddingStart="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11pp"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PASSWORD :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Passdittxtu"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/roundedittext"
                android:ems="10"
                android:hint="*****"
                android:inputType="number"
                android:paddingStart="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updtbtnNu"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#50C2C9"
                android:text="Update" />

            <Button
                android:id="@+id/cancelbtnNu"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#F44336"
                android:text="Deactivate" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="130dp"
            android:text="Back" />


    </LinearLayout>
</LinearLayout>


<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="start">

    <include
        layout="@layout/navdrawer"/>
</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>

